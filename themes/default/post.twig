{% extends 'base.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ theme_url }}/css/highlightjs/a11y-dark.min.css">
    <link rel="stylesheet" href="{{ theme_url }}/css/post.css">
{% endblock %}

{% block main %}
    <div id="main" role="main">
        <div class="container">
            <div id="post-header">
                <h1>{{current_page.title}}</h1>
                <p>Published {% if current_page.author %} by {{current_page.author}} {% endif %} on {{current_page.date_formatted}}</p>
                <hr></hr>
            </div>
            {{ content }}
            {% include 'partial/disqus.twig' %}
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="{{ theme_url }}/js/highlightjs/highlight.min.js"></script>
    <script>hljs.highlightAll();</script>
{% endblock %}